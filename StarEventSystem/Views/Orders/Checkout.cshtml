@model dynamic
@{
    ViewData["Title"] = "Checkout";
    var eventDetails = ViewBag.Event as StarEventSystem.Models.Event;
    var selectedTickets = ViewBag.SelectedTickets as IEnumerable<dynamic>;
    decimal total = ViewBag.Total;
}

<h2>Checkout - @eventDetails.EventName</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ticket Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in selectedTickets)
        {
            <tr>
                <td>@ticket.TicketType.TypeName</td>
                <td>@ticket.Quantity</td>
                <td>@ticket.TicketType.Price.ToString("C")</td>
                <td>@ticket.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @total.ToString("C")</h3>

<h4>Enter Your Details</h4>
<div class="form-group">
    <label>Name</label>
    <input id="CustomerName" class="form-control" required />
</div>
<div class="form-group">
    <label>Email</label>
    <input id="CustomerEmail" type="email" class="form-control" required />
</div>
<div class="form-group">
    <label>Phone</label>
    <input id="CustomerPhone" class="form-control" required />
</div>

<!-- PayPal button -->
<div id="paypal-button-container" class="mt-3"></div>

<script src="https://www.paypal.com/sdk/js?client-id=AZZ7mF8tKQuGUD9ysgkUQQ2QSm_Knz8O7Jo8hsVzoxPEcWzi0yYrbBI0a-2nZAS2wN_VK50G6qc0WPLX&currency=USD"></script>
<script>
    paypal.Buttons({
        createOrder: function(data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: { value: '@total' }
                }]
            });
        },
        onApprove: function(data, actions) {
            return actions.order.capture().then(function(details) {

                // Send order data to server
                var form = new FormData();
                form.append("EventId", "@eventDetails.EventId");
                form.append("TotalAmount", "@total");
                form.append("CustomerName", document.getElementById("CustomerName").value);
                form.append("CustomerEmail", document.getElementById("CustomerEmail").value);
                form.append("CustomerPhone", document.getElementById("CustomerPhone").value);

                @foreach (var ticket in selectedTickets)
                {
                        <text>form.append("Quantities[@ticket.TicketType.TicketTypeId]", "@ticket.Quantity");</text>
                }

                fetch('@Url.Action("PlaceOrder", "Orders")', {
                    method: 'POST',
                    body: form
                })
                .then(response => response.json())
                .then(result => {
                    if(result.success){
                        window.location.href = '/Orders/OrderConfirmation?orderId=' + result.orderId;
                    } else {
                        alert('Error placing order!');
                    }
                });
            });
        }
    }).render('#paypal-button-container');
</script>

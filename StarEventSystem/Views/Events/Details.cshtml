@model StarEventSystem.Models.Event
@{
    ViewData["Title"] = "Event Details";
    var ticketTypes = ViewBag.TicketTypes as List<StarEventSystem.Models.TicketType>;
}

<h1>@Model.EventName</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.EventDescription</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.EventType</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Organizer</dt>
        <dd class="col-sm-10">@Model.OrganizerId</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Event Image" style="max-width:300px;" />
            }
            else
            {
                <span>No image uploaded</span>
            }
        </dd>
    </dl>
</div>

<hr />
<h3>Ticket Types</h3>
@if (Model.TicketTypes != null && Model.TicketTypes.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Price</th>
                <th>Seats</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.TicketTypes)
            {
                <tr>
                    <td>@ticket.TypeName</td>
                    <td>@ticket.Price</td>
                    <td>@ticket.Seats</td>
                    <td>
                        <a asp-controller="TicketTypes" asp-action="Edit" asp-route-id="@ticket.TicketTypeId">Edit</a> |
                        <a asp-controller="TicketTypes" asp-action="Delete" asp-route-id="@ticket.TicketTypeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No ticket types added yet.</p>
}

<a asp-controller="TicketTypes" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-success">
    Add Ticket Type
</a>

<br />
<br />
<a asp-action="Index">Back to Events</a>